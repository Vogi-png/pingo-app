<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pinguSkinLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PinguSkin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header/Logo -->
        <ImageView
            android:id="@+id/headerLogoSkins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-126dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/header_default" />

        <!-- Pinguim Atual -->
        <ImageView
            android:id="@+id/pinguImageSkin"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/pingu_da_silva"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headerLogoSkins"
            app:srcCompat="@drawable/imagem_pingo" />

        <!-- Nome do Pinguim -->
        <TextView
            android:id="@+id/pinguNameSkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Pingo da Silva"
            android:textColor="@color/azulEscuro"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pinguImageSkin" />

        <!-- Dropdown fake -->

        <!-- Cards das skins -->

        <!-- BotÃ£o flutuante -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
